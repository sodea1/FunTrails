<!DOCTYPE html>
<html lang="en" prefix="og: http://ogp.me/ns#">
  <head>
    <title>FunTrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <meta 
    property=”og:title”
    content="FunTrails"
    />
    <meta name="image" property="og:image" content="public/funtrails.png">
    <meta 
      name=”author”
      content="Sean O'Dea"
    />
    <meta 
      name="description"
      property=”og:description” 
      content="FunTrails is a full stack clone of AllTrails that curates parks and trails, displays geographic data, and provides a forum for outdoor enthusiasts to share reviews of their experiences."
    />
    <meta 
      property=”og:url”
      content="https://fun-trails.herokuapp.com/#/"
    />

    <script type="text/javascript">
      window.logo = "<%= image_url('logo.png') %>";

      window.green_loc = "<%= image_url('green_loc.png') %>";

      // TRAIL HEADER PHOTOS

      window.right_arrow = "<%= image_url('right_arrow.svg') %>";
      window.left_arrow = "<%= image_url('left_arrow.svg') %>";

      window.git_profile_photo = "<%= image_url('git_profile_photo.jpg') %>";
      window.angellist = "<%= image_url('angellist.png') %>";

      window.user_default = "<%= image_url('userDefault.png') %>";
      window.x = "<%= image_url('x.png') %>";
      window.user_prof = "<%= image_url('user_prof.png') %>";
      window.dropdown = "<%= image_url('dropdown.png') %>";
      window.search = "<%= image_url('search.png') %>";
      window.green_arrow = "<%= image_url('green_arrow.png') %>";
      window.stars = "<%= image_url('stars.png') %>";
      window.star = "<%= image_url('star.svg') %>";
      window.half_star = "<%= image_url('half_star.png') %>";
      window.grey_star = "<%= image_url('grey_star.svg') %>";
      window.hikers = "<%= image_url('hikers.jpg') %>";
      window.confidence = "<%= image_url('confidence.png') %>";
      window.app_store = "<%= image_url('app_store.png') %>";
      window.app_preview_1 = "<%= image_url('app_preview.png') %>";

      window.hiking_card = "<%= image_url('hiking_card.png') %>";
      window.mtn_biking = "<%= image_url('mtn_biking.png') %>";
      window.running_card = "<%= image_url('running_card.png') %>";
      window.dogs_card = "<%= image_url('dogs_card.png') %>";
      window.wheelchair_card = "<%= image_url('wheelchair_card.png') %>";
      window.biking_card = "<%= image_url('biking_card.png') %>";

      window.planet = "<%= image_url('planet.svg') %>";
      window.one_tree = "<%= image_url('one_tree.svg') %>";
      window.leave_no_trace = "<%= image_url('leave_no_trace.svg') %>";
      window.app_foot = "<%= image_url('appstore_foot.png') %>";
      window.google_play = "<%= image_url('google_play.png') %>";
      window.linkedin = "<%= image_url('linkedin.png') %>";
      window.github = "<%= image_url('github.png') %>";

    </script>   

  </head>

  <body>
    <%= yield %>
  </body>
</html>
