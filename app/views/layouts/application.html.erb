<!DOCTYPE html>
<html>
  <head>
    <title>FunTrails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon-16x16.png">

    <script type="text/javascript">
      window.logo = "<%= image_url('logo.jpg') %>";
      window.splash_hiker = "<%= image_url('splash_hiker.jpg') %>";
      window.user_prof = "<%= image_url('user_prof.png') %>";
      window.dropdown = "<%= image_url('dropdown.png') %>";
      window.search = "<%= image_url('search.png') %>";
      window.green_arrow = "<%= image_url('green_arrow.png') %>";
      window.stars = "<%= image_url('stars.png') %>";
      window.hikers = "<%= image_url('hikers.jpg') %>";
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
